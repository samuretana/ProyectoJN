@model List<OfertasModel>

<div class="card card-default">
    <div class="card-header">
        <h2>Ofertas</h2>
    </div>

    <div class="card-body">

        <div style="margin:10px; text-align:right">

            <div class="alert alert-default text-center" role="alert">
                @ViewBag.Msj
            </div>

            <a class="btn btn-outline-primary" href="@Url.Action("RegistrarOfertas","Ofertas")"><i class="fa fa-plus"></i>Agregar</a>
        </div>

        <table id="example" class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Descripción</th>
                    <th scope="col">Cantidad</th>
                    <th scope="col">Horario</th>
                    <th scope="col">Salario</th>
                    <th scope="col">Estado</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Nombre</td>
                        <td>@item.Descripcion</td>
                        <td>@item.Cantidad</td>
                        <td>@item.Horario</td>
                        <td>@item.Salario</td>
                        <td>@item.EstadoDescripcion</td>
                        <td><a href="@Url.Action("ActualizarOfertas", "Ofertas", new{ Id = item.Id})"><i class="fa fa-edit"></i></a></td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

<script src="~/js/jquery.min.js"></script>
<script>
    $(document).ready(function() {
        var table = new DataTable('#example', {
            language: {
                url: 'https://cdn.datatables.net/plug-ins/2.2.2/i18n/es-ES.json',
            },
            columnDefs: [{
              targets: '_all', className: 'dt-left'
            }],
        });
    });
    

</script>