@model OfertasModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-default">
    <div class="card-header">
        <h2>Registrar Oferta</h2>
    </div>

    <div class="card-body">

        <form asp-controller="Ofertas" asp-action="RegistrarOfertas">
            <div class="row">
                <div class="col-2"></div>
                <div class="col-8">
                    <div class="form-group col-md-12 mb-4">
                        Puesto
                        <select class="form-control input-lg" asp-for="IdPuesto" asp-items="ViewBag.Puestos" >
                        </select>
                    </div>
                    <div class="form-group col-md-12 mb-4">
                        Cantidad
                        <input type="text" class="form-control input-lg" asp-for="Cantidad" placeholder="Cantidad">
                    </div>
                    <div class="form-group col-md-12 mb-4">
                        Horario
                        <input type="text" class="form-control input-lg" asp-for="Horario" placeholder="Horario">
                    </div>
                    <div class="form-group col-md-12 mb-4">
                        Salario
                        <input type="text" class="form-control input-lg" asp-for="Salario" placeholder="Salario">
                    </div>

                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary btn-pill mb-4">Procesar</button>
                    </div>
                </div>



            </div>
        </form>

    </div>
</div>


