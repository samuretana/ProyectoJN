@model PuestosModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-default">
    <div class="card-header">
        <h2>Actualizar Puesto</h2>
    </div>

    <div class="card-body">

        <form asp-controller="Puestos" asp-action="ActualizarPuestos">
            <div class="row">
                <div class="col-2"></div>
                <div class="col-8">

                    <input type="hidden" asp-for="Id">

                    <div class="form-group col-md-12 mb-4">
                        Nombre
                        <input type="text" class="form-control input-lg" asp-for="Nombre" placeholder="Nombre">
                    </div>
                    <div class="form-group col-md-12 mb-4">
                        Descripcion
                        <textarea class="form-control input-lg" asp-for="Descripcion" placeholder="Descripción" rows="8"></textarea>
                    </div>

                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary btn-pill mb-4">Procesar</button>
                    </div>
                </div>



            </div>
        </form>

    </div>
</div>


