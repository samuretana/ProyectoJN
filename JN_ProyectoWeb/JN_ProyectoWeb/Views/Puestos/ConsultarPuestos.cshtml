@model List<PuestosModel>

<div class="card card-default">
    <div class="card-header">
        <h1>Puestos</h1>
    </div>

    <div class="card-body">

        <div class="alert alert-default text-center" role="alert">
            @ViewBag.Msj
        </div>

        <div style="margin:10px; text-align:right">
            <a class="btn btn-outline-primary" href="@Url.Action("RegistrarPuestos","Puestos")"><i class="fa fa-plus"></i>Agregar</a>
        </div>

        <table id="example" class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Descripción</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Nombre</td>
                        <td>@item.Descripcion</td>
                        <td><a href="@Url.Action("ActualizarPuestos", "Puestos", new{ Id = item.Id})"><i class="fa fa-edit"></i></a></td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

<script src="~/js/jquery.min.js"></script>
<script>
    $(document).ready(function() {
         var table = new DataTable('#example', {
             language: {
                 url: 'https://cdn.datatables.net/plug-ins/2.2.2/i18n/es-ES.json',
             },
             columnDefs: [{
               targets: '_all', className: 'dt-left'
             }],
         });
     });

</script>